//Create a student object with name, age, and a method to display info:

//creating objects
const student ={
    firstName : "shiva",
    lastName : "sakthi",
    age :21,
    //methods inside object
    getFullDetails:function(){
     return this.firstName + " " +this.lastName+ "."+ " I am "+this.age + " years old!";
    },
    input(){
        return 'hi, i am ${this.getFullDetails()}';
    }
};
console.log(student.getFullDetails());


//oupput : shiva sakthi. I am 21 years old!
